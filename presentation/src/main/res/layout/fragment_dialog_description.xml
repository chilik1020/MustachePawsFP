<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/ic_background"
    android:padding="@dimen/default_padding">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glVerticalStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glVerticalEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:text="Please type some description:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/glVerticalEnd"
        app:layout_constraintStart_toStartOf="@id/glVerticalStart"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:gravity="bottom"
        android:hint="Enter description"
        android:minLines="10"
        app:layout_constraintEnd_toEndOf="@id/glVerticalEnd"
        app:layout_constraintStart_toStartOf="@id/glVerticalStart"
        app:layout_constraintTop_toBottomOf="@id/tvDescription" />

    <ImageButton
        android:id="@+id/ibGoToPreviousStep"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintEnd_toStartOf="@+id/ibClose"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@id/glVerticalStart"
        app:layout_constraintTop_toBottomOf="@id/etDescription" />

    <ImageButton
        android:id="@+id/ibClose"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:layout_marginHorizontal="@dimen/default_half_margin"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toStartOf="@+id/ibGoToNextStep"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/ibGoToPreviousStep"
        app:layout_constraintTop_toBottomOf="@id/etDescription" />

    <ImageButton
        android:id="@+id/ibGoToNextStep"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintEnd_toEndOf="@id/glVerticalEnd"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ibClose"
        app:layout_constraintTop_toBottomOf="@id/etDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>